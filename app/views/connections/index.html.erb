<div class="container">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Customer ID</th>
        <th>Customer identifier</th>
        <th>Provider name</th>
        <th>Status</th>
        <th>Accounts</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @connections.each do |connection| %>
        <tr>
          <td><%= connection.salt_edge_id %></td>

          <td><%= connection.customer.salt_edge_id %></td>

          <td><%= connection.customer.identifier %></td>

          <td><%= connection.provider_name %></td>

          <td><%= connection.status %></td>

          <td>
            <%=
              link_to connection.accounts.count,
                      connection_accounts_path(connection)
            %>
          </td>

          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
